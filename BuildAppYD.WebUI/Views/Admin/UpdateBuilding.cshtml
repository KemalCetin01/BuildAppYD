@model BuildingModel
@{
    ViewData["Title"] = "UpdateBuilding";
}
@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Update Building</h1>

<form asp-controller="Admin" asp-action="UpdateBuilding" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="buildingName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="buildingName" value="@Model.buildingName" class="form-control" />
                    <span asp-validation-for="buildingName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="buildingNo" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="buildingNo" value="@Model.buildingNo" class="form-control" />
                    <span asp-validation-for="buildingNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="fullAddress" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="fullAddress" value="@Model.fullAddress" class="form-control" />
                    <span asp-validation-for="fullAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="squareMeter" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="squareMeter" value="@Model.squareMeter" class="form-control" />
                    <span asp-validation-for="squareMeter" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Rooms</label>
                @foreach (var item in (List<RoomModel>)Model.Rooms)
                {
                    @*<label asp-for="@item.roomName" class="col-md-2 col-form-label"></label>*@
                    <div class="col-md-4">
                        <input asp-for="@item.roomName" value="@item.roomName" class="form-control" readonly />
                        <span asp-validation-for="@item.roomName" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Stores</label>
                @foreach (var item in (List<StoreModel>)Model.Stores)
                {

            <div class="col-md-4">
                <input asp-for="@item.StoreName" value="@item.StoreName" class="form-control" readonly href="getListBuildingAsync" />
                <a class="btn btn-primary btn-sm mr-2" href="getListBuildingAsync">@item.StoreName</a>
                <span asp-validation-for="@item.StoreName" class="text-danger"></span>
            </div>
                }
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Binayı Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>
